{
  "name": "@mobilabs/kasar",
  "version": "2.3.0",
  "description": "View-powered Static Website Generator",
  "main": "index.js",
  "bin": {
    "kasar": "./bin/kasar.js"
  },
  "scripts": {
    "general": " --- GENERAL ---",

    "build:production": " --- BUILDING (PRODUCTION) --- ",
    "build:skeleton": "node site/.kasar/theme/tasks/build.skeleton.js $1",
    "build:project": "node site/.kasar/theme/tasks/build.project.js $1",
    "build": "npm run build:skeleton && npm run build:project",

    "testing": " --- TESTING --- ",
    "test": "",

    "serving": " --- SERVING --- ",
    "server:start": "node ./tasks/server.js --start --path ./site/_dist --port 8080",

    "watch:js:css": " --- WATCHING --- ",
    "watch:rebuild": "npm run build:project && node ./tasks/server.js --reload",
    "watch": "nodemon -e md,html --watch './site/webpages/**/*' --exec npm run watch:rebuild"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/kasar.git"
  },
  "keywords": [
    "ES6"
  ],
  "author": {
    "name": "Mobilabs",
    "email": "contact@mobilabs.fr",
    "url": "http://www.mobilabs.fr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/kasar/issues"
  },
  "homepage": "https://github.com/jclo/kasar",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@mobilabs/kzlog": "^1.0.3",
    "@mobilabs/messenger": "^1.0.3",
    "@mobilabs/pureplus": "^0.90.1",
    "@mobilabs/rview": "^1.1.0",
    "@mobilabs/spine": "^0.9.5",
    "browser-sync": "^2.29.3",
    "clean-css": "^5.3.2",
    "fs-extra": "^11.1.1",
    "html5-boilerplate": "^8.0.0",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-container": "^3.0.0",
    "nodemon": "^3.0.1",
    "nopt": "^7.2.0",
    "pakket": "^1.0.7",
    "purecss": "^3.0.0",
    "shelljs": "^0.8.5",
    "terser": "^5.21.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false
}
